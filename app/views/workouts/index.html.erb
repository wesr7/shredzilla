<% @workout.each do |exercise| %>
<tr>
   <td><%= exercise.name %></td>
   <td><%= exercise.hold %></td>
   <td><%= exercise.reps %></td>
   <td><%= exercise.sets %></td>
   <td><%= exercise.timer %></td>
</tr>
<% end %>
</table>

<%= form_for :workouts do |f| %>
<p>
  <%= f.label :note %><br>
  <textarea class="form-control" rows="4"><% f.text_area :note %></textarea>
</p>

<p>
  <%= f.submit  "Save Note"%>
</p>
  <% end %>






