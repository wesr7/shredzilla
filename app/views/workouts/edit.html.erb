

<div class="container">
  <div class="jumbotron">
    <div class="container text-center text-uppercase">
      <h1>Edit <%= @workout.name %></h1>
    </div>
  </div>




  <table class="table table-bordered well well-sm">
    <tr>
      <td><strong>Exercise</strong></td>
      <td><strong>Hold</strong></td>
      <td><strong>Reps</strong></td>
      <td><strong>Sets</strong></td>
      <td><strong>Timer</strong></td>
    </tr>
    <% @exercises.each do |exercise| %>
    <tr>
     <td><%= exercise.name %></td>
     <td><%= exercise.hold %></td>
     <td><%= exercise.reps %></td>
     <td><%= exercise.sets %></td>
     <td><%= exercise.timer %></td>

     <td><%= link_to "Delete Exercise", [exercise.workout, exercise],
       method: :delete,
       data: { confirm: 'Are you sure?' } %></td>
     </tr>
     <% end %>
   </table>
   <div class="row">
    <div class="text-center">
      <%= render "exercise_form" %>
    </div>
    </div><br />



  <div class="well well-sm" >
    <p><%= @workout.note %></p>
  </div>


  <h4><%= link_to 'Submit Your HIIT', workouts_path %>
  <%= link_to 'Delete Your HIIT', workout_path(@workout),
   method: :delete,
   data: { confirm: 'Are you sure?' } %></h4>


 </div>




