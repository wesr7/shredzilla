
<a href="<% render "edit_exercise_form" %>" data-toggle="modal" data-target="#editExerciseModal">Edit Exercise</a>


<div class="modal fade" id="editExerciseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit Exercise</h4>
              </div>
              <div class="modal-body">
                <%= @exercise.each do |e| %>
                  <ul class="list-unstyled">
                    <div class="form-group">
                      <li><%= e.label :name %></li>
                      <li><%= e.text_field :name, e.name, class: "form-control" %></li>
                    </div>
                    <div class="form-group">
                      <li><%= e.label :hold %></li>
                      <li><%= e.text_field :hold, e.hold, class: "form-control" %></li>
                    </div>
                    <div class="form-group">
                      <li><%= e.label :reps %></li>
                      <li><%= e.text_field :reps, e.reps, class: "form-control" %></li>
                    </div>
                    <div class="form-group">
                      <li><%= e.label :sets %></li>
                      <li><%= e.text_field :sets, e.sets, class: "form-control" %></li>
                    </div>
                    <div class="form-group">
                      <li><%= e.label :timer %></li>
                      <li><%= e.text_field :timer, e.timer, class: "form-control" %></li>
                    </div>
                  </ul>
              </div>
              <div class="modal-footer">
                <%= e.submit "Add Exercise" , class: " btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
        </div>





